@model WEA.AuthorisedUser.Collabration.Abstraction.IndoorRelay.AddAnswer

@{
    ViewData["Title"] = "SaveAnswer";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
 <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Response to Questions</h5>
              
                        @if(TempData["AlertMessage"]!=null)
                         {
                        <div class="alert alert-success alert-dismissible fade show">
                        @TempData["AlertMessage"]
                         </div>
                         }
              <!-- Vertical Form -->
              <form asp-action="SaveAnswer" class="row g-3">
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Answer</label>
                  <input asp-for="Answer" type="text" class="form-control" id="inputNanme4">
                </div>
                  <input asp-for="faqId" type="hidden" class="form-control" id="inputNanme4" >
              
                 
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Add Response</button>
                
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
          </div>


