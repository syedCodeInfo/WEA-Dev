@model WEA.FAQServices.Collabration.Abstraction.IndoorRelay.FAQInfo

@{
    ViewData["Title"] = "AddFAQ";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}



 <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add FAQ</h5>

              <!-- Default Tabs -->
              <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#FAQAdd" type="button" role="tab" aria-controls="home" aria-selected="true">Add FAQ</button>
                </li>
               
               
              </ul>
              <div class="tab-content pt-2" id="myTabContent">
                <div class="tab-pane fade show active" id="FAQAdd" role="tabpanel" aria-labelledby="home-tab">
                  <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add FAQ</h5>
                  @if(TempData["AlertMessage"]!=null)
                         {
                        <div class="alert alert-success alert-dismissible fade show">
                        @TempData["AlertMessage"]
                         </div>
                         }
              <!-- General Form Elements -->
              <form asp-action="AddFAQ">
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Your Question</label>
                  <div class="col-sm-10">
                    <input asp-for="Question" type="text" class="form-control">
                  </div>
                </div>
           

                <div class="row mb-3">
                
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Add FAQ</button>
                  </div>
                </div>

              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div> </div>

                </div>

             
              </div><!-- End Default Tabs -->

            </div>
          </div>

       

        </div>


      </div>
    </section>