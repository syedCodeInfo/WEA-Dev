@model WEA.CoursePersistance.Collabaration.Abstraction.IndoorRelay.NgoCourse

@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/Shared/_ngoLayout.cshtml";
}

  <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Course Information</h5>
              
                        @if(TempData["AlertMessage"]!=null)
                         {
                        <div class="alert alert-success alert-dismissible fade show">
                        @TempData["AlertMessage"]
                         </div>
                         }
              <!-- Vertical Form -->
              <form asp-action="AddCourse" class="row g-3">
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Course Name</label>
                  <input asp-for="Name" type="text" class="form-control" id="inputNanme4">
                </div>
               
                <div class="col-12">
                  <label for="inputEmail4" class="form-label">TrainerName</label>
                  <input asp-for="TrainerName" type="text" class="form-control" id="inputEmail4">
                </div>
                <div class="col-12">
                  <label for="inputPassword4" class="form-label">Course Category</label>
                 <select  asp-for="UserQualification" type="text" class="form-select">
                    <option selected>Choose</option>
                    <option value="1">Handicrafts</option>
                    <option value="1">Tailoring</option>
                    <option value="2">Crafting</option>
                     <option value="2">Communication Skills</option>
                     <option value="3">software development</option>
                     <option value="3">Business development</option>
                  </select>
                 
                </div>
                <div class="col-12">
                  <label for="inputAddress" class="form-label">Duration In Month</label>
                  <select  asp-for="DurationInMonth" type="text" class="form-select">
                    <option selected>Choose</option>
                    <option value="3">3 month</option>
                     <option value="6">6 month</option>
                     <option value="9">9 month</option>
                  </select>
             
                </div>
                 
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Create Course</button>
                
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
          </div>



